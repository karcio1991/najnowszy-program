<Window x:Class="WpfApp15.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp15"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="700" Width="900">
    <Grid Style="{StaticResource styleGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Login" Grid.Row="0" Grid.Column="1" Style="{StaticResource styleDoTextBlockow}" VerticalAlignment="Center" />
        <TextBlock Text="UsersName" Grid.Row="1" Grid.Column="0" Style="{StaticResource styleDoTextBlockow}" VerticalAlignment="Center" />
        <TextBox x:Name="tbLogin" Grid.Row="1" Grid.Column="1" Style="{StaticResource styleDoTextBoxow}"/>
        <TextBlock Text="Password" Grid.Row="2" Grid.Column="0" Style="{StaticResource styleDoTextBlockow}" VerticalAlignment="Center" />
        <TextBox x:Name="tbPassword" Grid.Row="2" Grid.Column="1" Style="{StaticResource styleDoTextBoxow}"/>
        <TextBlock Text="FullName" Grid.Row="3" Grid.Column="0" Style="{StaticResource styleDoTextBlockow}" VerticalAlignment="Center" />
        <TextBox x:Name="tbFullName" Grid.Row="3" Grid.Column="1" Style="{StaticResource styleDoTextBoxow}"/>
        <TextBlock Text="Phone" Grid.Row="4" Grid.Column="0" Style="{StaticResource styleDoTextBlockow}" VerticalAlignment="Center" />
        <TextBox x:Name="tbPhone" Grid.Row="4" Grid.Column="1" Style="{StaticResource styleDoTextBoxow}"/>
        <Button x:Name="btnZatwierdz" Style="{StaticResource styleDoButtonow}" Grid.Row="5" Content="Submit" Click="btnZatwierdz_Click"/>
        <Button x:Name="btnPokazBazeDanych" Style="{StaticResource styleDoButtonow}" Grid.Row="5" Grid.Column="1" Content="Show logins" Click="btnPokazBazeDanych_Click"/>
    </Grid>
</Window>
